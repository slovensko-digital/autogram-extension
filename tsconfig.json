{
  "compilerOptions": {
    "outDir": "./dist/",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "module": "CommonJS",
    "target": "ES5",
    "allowJs": true,
    "lib": ["ES5", "ES2019", "DOM"]
  },
  "exclude": ["spec"]
}
