{
  "compilerOptions": {
    "jsx": "react",
    "outDir": "./dist/",
    "moduleResolution": "node",
    // "noImplicitAny": false,
    "allowSyntheticDefaultImports": true, // because of webpack config
    "esModuleInterop": true, // because of webpack config
    "sourceMap": true,
    "strictNullChecks": true,
    "module": "CommonJS",
    "target": "ES6",
    "allowJs": true,
    "experimentalDecorators": true,
    "lib": ["ES5", "ES2023", "DOM", "ESNext"],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true
  },
  "exclude": ["spec"]
}
