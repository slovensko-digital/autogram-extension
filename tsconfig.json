{
  "compilerOptions": {
    "jsx": "react",
    "outDir": "./dist/",
    "moduleResolution": "node",
    // "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "module": "CommonJS",
    "target": "ES6",
    "allowJs": true,
    "experimentalDecorators": true,
    "lib": ["ES5", "ES2023", "DOM", "ESNext"],
    "resolveJsonModule": true
  },
  "exclude": ["spec"]
}
